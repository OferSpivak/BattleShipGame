<?xml version="1.0"?>
<BattleShipGame xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="BattleShipGame.xsd">
    <GameType>Basic</GameType>
    <boardSize>12</boardSize>
    <shipTypes>
        <shipType name="A">
            <type>Regular</type>
            <amount>1</amount>
            <length>4</length>
            <score>1</score>
        </shipType>
        <shipType name="B">
            <type>Regular</type>
            <amount>2</amount>
            <length>3</length>
            <score>1</score>
        </shipType>
        <shipType name="C">
            <type>Regular</type>
            <amount>3</amount>
            <length>2</length>
            <score>1</score>
        </shipType>
        <shipType name="D">
            <type>Regular</type>
            <amount>4</amount>
            <length>1</length>
            <score>1</score>
        </shipType>
        <!--<shipType name="E">
            <type>Complex</type>
            <amount>4</amount>
            <path>
                <firstAxisLength>2</firstAxisLength>
                <secondAxisLength>3</secondAxisLength>
            </path>
        </shipType>-->
    </shipTypes>
    <boards>
        <board>
            <ship>
                <type>A</type>
                <position x="1" y="1" />
                <direction>ROW</direction>
            </ship>
            <ship>
                <type>B</type>
                <position x="2" y="2" />
                <direction>COLUMN</direction>
            </ship>
        </board>
        <board>
            <ship>
                <type>A</type>
                <position x="1" y="1" />
                <direction>COLUMN</direction>
            </ship>
            <ship>
                <type>B</type>
                <position x="2" y="2" />
                <direction>ROW</direction>
            </ship>
        </board>
    </boards>
</BattleShipGame>
